
<% include header.ejs %> 
<% include radio.ejs %>   
<% include schedule.ejs %>  
<main>
    <div class="wrapper">
        <% if(err){%>
        <p class="error"><%= err%></p>
        <% } else {%>
        <article class="news">
                        <h1 class="news-header"><%=news.header%></h1>
                        <h3 class="news-date">
                        <%
                              let newDate = news.date;
                              newDate.setTime(newDate.getTime()+9*60*60*1000);
                              newDate = newDate.toDateString().split(" ");
                        %>
                        <%=newDate[2]%> <%=newDate[1]%> <%=newDate[3]%>
                        </h3>
                        <div class="news-full-description">
                            <%- news.full_description %>
                        </div>
        </article>
        <% } %>
    </div>
</main>
<% include footer.ejs %> 
<% include chat.ejs %>
<% include scripts.ejs %> 
</body>
</html>